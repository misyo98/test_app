<%= simple_form_for @car do |f| %>
<div class="form-group">
  <div class="row">
    <div class="col-md-6">
      <%= f.input :model, class: 'form-control', placeholder: "Сar model", label: false %>
    </div>
    <div class="col-md-6">
      <%= f.input :color, class: 'form-control', placeholder: "Сolor of the car", label: false %>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.input :destination, class: 'form-control', placeholder: "Destination", label: false %>
</div>
<div class="form-group text-center">
  <div class="btn btn-secondary btn-lg">
    <%= link_to "Cancel", cars_path %>
  </div>
  <%= f.button :submit, "Let's go!", class: "btn btn-success btn-lg" %>
</div>
<% end %>
