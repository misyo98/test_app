<div class="container col-md-8 pt-3">
  <%= simple_form_for @car do |f| %>
    <h2 class="font-weight-bold text-center pt-5">
Where are you going?</h2>
    <div class="form-group">
      <div class="row">
        <div class="col-md-6">
          <%= f.input :model, class: 'form-control', placeholder: "Model", label: false %>
        </div>
        <div class="col-md-6">
          <%= f.input :color, class: 'form-control', placeholder: "Color", label: false %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.input :destination, class: 'form-control', placeholder: "Destination", label: false %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, "Let's go", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
